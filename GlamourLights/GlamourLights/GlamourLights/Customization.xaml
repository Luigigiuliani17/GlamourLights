<Page x:Class="GlamourLights.Customization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlamourLights"
      mc:Ignorable="d" 
      d:DesignHeight="520" d:DesignWidth="720"
      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
      Title="Customization">

    <Grid>
        <Grid x:Name="buttonGrid" HorizontalAlignment="Stretch" Margin="10,10,10,69" VerticalAlignment="Stretch" />
        <Button x:Name="save_button" Content="Salva modifiche" HorizontalAlignment="Left" Margin="278,480,0,0" VerticalAlignment="Top" Width="156" Click="save_button_Click"/>
        <ListBox x:Name="department_List" HorizontalAlignment="Left" Margin="592,200,0,0" VerticalAlignment="Top" Height="280" Width="118" ItemsSource="{Binding Path=shelves_list}" SelectionChanged="department_List_SelectionChanged"/>
        <Button x:Name="changeMode" Content="Modalità shop_layout" HorizontalAlignment="Left" Margin="492,480,0,0" VerticalAlignment="Top" Width="196" Click="changeMode_Click"/>

    </Grid>
</Page>
